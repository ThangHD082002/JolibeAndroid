<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/radius_white"
    android:layout_height="150dp">

    <ImageView
        android:id="@+id/img"
        android:src="@drawable/menu_drink"
        android:layout_width="100dp"
        android:layout_gravity="center"
        android:layout_height="100dp" />
    <LinearLayout
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:layout_width="290dp"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/tname"
                android:text="Mỳ ý sốt hải sản ngon"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tprice"
                android:text="80000"
                android:textSize="20dp"
                android:textColor="@color/red_sign_in"
                android:textStyle="bold"
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <TextView
            android:id="@+id/tdesc"
            android:text="chú thích"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout

            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/giamSl"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="8dp"
                android:background="@drawable/radius_detail"
                android:gravity="center"
                android:text="-"
                android:textSize="21sp"
                android:textColor="@color/white"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/showSl"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"

                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tangSl"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="8dp"
                android:textSize="21sp"
                android:background="@drawable/radius_detail"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/white"
                android:textStyle="bold" />
            <Button
                android:id="@+id/btdelete"
                android:background="@drawable/ic_delete"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="90dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>